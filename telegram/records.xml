<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data  noupdate="1">
    <record model="ir.config_parameter" id="telegram_token">
        <field name="key">telegram.token</field>
        <field name="value">null</field>
    </record>
    <record model="ir.config_parameter" id="telegram_odoo_threads">
        <field name="key">telegram.odoo_threads</field>
        <field name="value">2</field>
    </record>
    <record model="ir.config_parameter" id="telegram_threads">
        <field name="key">telegram.telegram_threads</field>
        <field name="value">2</field>
    </record>
    <!--BASIC COMMANDS-->
    <record model="telegram.command" id="login_command">
        <field name="name">login</field>
        <field name="python_code">login_token = TelegramUser.register_user(self.env, m.chat.id)
web_base = get_parameter(bot.db_name, 'web.base.url')
bot.send_message(m.chat.id, '%s/web/login/telegram?token=%s' % (web_base, login_token))
        </field>
    </record>
</data>
</openerp>